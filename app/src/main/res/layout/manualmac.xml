<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:id="@+id/manualmac_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/manualmac_header"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/manualmac_current_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_mac"
            />
        <TextView
            android:id="@+id/manualmac_macaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/manualmac_byte1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
        <TextView
            android:id="@+id/manualmac_colon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            />
        <EditText
            android:id="@+id/manualmac_byte2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
        <TextView
            android:id="@+id/manualmac_colon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            />
        <EditText
            android:id="@+id/manualmac_byte3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
        <TextView
            android:id="@+id/manualmac_colon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            />
        <EditText
            android:id="@+id/manualmac_byte4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
        <TextView
            android:id="@+id/manualmac_colon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            />
        <EditText
            android:id="@+id/manualmac_byte5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
        <TextView
            android:id="@+id/manualmac_colon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            />
        <EditText
            android:id="@+id/manualmac_byte6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="2"
            />
    </LinearLayout>
    <Button
        android:id="@+id/manualmac_apply_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_apply"
        android:onClick="applyNewAddress"
        />
    <Button
        android:id="@+id/manualmac_cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:onClick="cancel"
        />
</LinearLayout>
